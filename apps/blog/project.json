{
  "root": "apps/blog",
  "sourceRoot": "apps/blog/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nrwl/web:webpack",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "compiler": "babel",
        "outputPath": "dist/apps/blog",
        "index": "apps/blog/src/index.html",
        "baseHref": "/",
        "main": "apps/blog/src/main.tsx",
        "polyfills": "apps/blog/src/polyfills.ts",
        "tsConfig": "apps/blog/tsconfig.app.json",
        "assets": ["apps/blog/src/favicon.ico", "apps/blog/src/assets"],
        "styles": ["apps/blog/src/styles.scss"],
        "scripts": [],
        "webpackConfig": "@nrwl/react/plugins/webpack"
      },
      "configurations": {
        "production": {
          "fileReplacements": [
            {
              "replace": "apps/blog/src/environments/environment.ts",
              "with": "apps/blog/src/environments/environment.prod.ts"
            }
          ],
          "optimization": true,
          "outputHashing": "all",
          "sourceMap": false,
          "namedChunks": false,
          "extractLicenses": true,
          "vendorChunk": false
        }
      }
    },
    "build-image": {
      "builder": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          "nx build blog --configuration=production",
          "docker build -f ./apps/blog/Dockerfile . -t {args.dockerid}/blog:{args.dockertag}"
        ],
        "parallel": false
      }
    },
    "deploy": {
      "builder": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          "nx run blog:build-image",
          "docker push {args.dockerid}/blog:{args.dockertag}"
        ],
        "parallel": false
      }
    },
    "serve": {
      "executor": "@nrwl/web:dev-server",
      "options": {
        "buildTarget": "blog:build",
        "hmr": true,
        "proxyConfig": "apps/blog/proxy.conf.json"
      },
      "configurations": {
        "production": {
          "buildTarget": "blog:build:production",
          "hmr": false
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/blog/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/apps/blog"],
      "options": {
        "jestConfig": "apps/blog/jest.config.js",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
