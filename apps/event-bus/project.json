{
  "root": "apps/event-bus",
  "sourceRoot": "apps/event-bus/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nrwl/node:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/event-bus",
        "main": "apps/event-bus/src/main.ts",
        "tsConfig": "apps/event-bus/tsconfig.app.json",
        "assets": ["apps/event-bus/src/assets"],
        "generatePackageJson": true
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false,
          "fileReplacements": [
            {
              "replace": "apps/event-bus/src/environments/environment.ts",
              "with": "apps/event-bus/src/environments/environment.prod.ts"
            }
          ]
        }
      }
    },
    "build-image": {
      "builder": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          "nx build event-bus --configuration=production",
          "docker build -f ./apps/event-bus/Dockerfile . -t {args.dockerid}/event-bus:{args.dockertag}"
        ],
        "parallel": false
      }
    },
    "deploy": {
      "builder": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          "nx run event-bus:build-image",
          "docker push {args.dockerid}/event-bus:{args.dockertag}"
        ],
        "parallel": false
      }
    },
    "serve": {
      "executor": "@nrwl/node:execute",
      "options": {
        "buildTarget": "event-bus:build"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/event-bus/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/apps/event-bus"],
      "options": {
        "jestConfig": "apps/event-bus/jest.config.js",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
